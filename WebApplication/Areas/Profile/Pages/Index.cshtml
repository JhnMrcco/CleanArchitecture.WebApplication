@page
@model WebApplication.Areas.Profile.Pages.IndexModel
@{
}
<div class="d-sm-flex align-items-center justify-content-between">
    <h1 class="h3 mb-0 text-gray-800">@Model.FirstName @Model.LastName's Profile</h1>
</div>
<p></p>
<h4>Profile Page</h4>
<p></p>


<div>
    <div class="row">
        <div class="col-md-3">
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 text-secondary">Profile Picture</h6>
                        </div>
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col">
                                    @if (Model.ProfilePicture != null)
                                    {
                                        <img id="profilePicture" alt="Profile Picture of @Model.Username" style="width:inherit; height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.ProfilePicture))">
                                    }
                                    else
                                    {
                                        <img id="profilePicture" alt="Profile Picture of @Model.Username" style="width:inherit; height:350px; object-fit:cover" src="">
                                    }
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 text-secondary">About</h6>
                        </div>
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<partial name="SBAdmin/_ImageModal" />

@section Scripts
{
    <script src="~/js/Profile/index.js"></script>
}
